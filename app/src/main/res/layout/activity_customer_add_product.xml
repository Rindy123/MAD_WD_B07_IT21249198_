            android:layout_height="0dp"
            android:layout_weight="7"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
